<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.AppCompat.MainText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/simple_text_font_size</item>
        <item name="android:textColor">@color/text_main_color</item>
    </style>

    <style name="TextAppearance.AppCompat.SecondaryText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/simple_text_font_size</item>
        <item name="android:textColor">@color/text_secondary_color</item>
    </style>

    <style name="TextAppearance.AppCompat.SecondaryText.DividerHeader">
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Simple">
        <item name="android:textSize">@dimen/simple_text_font_size</item>
        <item name="android:textColor">@color/text_main_color</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SimpleIcon">
        <item name="android:layout_width">@dimen/simple_icon_width</item>
        <item name="android:layout_height">@dimen/simple_icon_height</item>
        <item name="tint">@color/colorPrimary</item>
    </style>
</resources>