<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fishing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/text_secondary_color</item>
        <item name="android:textColorSecondary">@color/text_secondary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.AnimatedSplashScreen" parent="Theme.Fishing.Figma">
        <item name="colorPrimary">@color/primaryFigmaColor</item>-->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryFigmaColor</item>-->
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_content</item>
        <item name="postSplashScreenTheme">@style/Theme.AnimatedSplashScreen</item>
    </style>

    <style name="MainActionBar" parent="Theme.Fishing.Figma">
        <item name="colorOnPrimary">?colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>
    </style>

    <!-- Figma application theme. -->
    <style name="Theme.Fishing.Figma">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryFigmaColor</item>
        <item name="colorPrimaryVariant">@color/primaryFigmaDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryFigmaColor</item>
        <item name="colorSecondaryVariant">@color/secondaryFigmaDarkColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Text color. -->
        <item name="android:textColorPrimary">@color/primaryFigmaTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryFigmaTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackgroundTint">@color/primaryFigmaBackgroundTint</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>
    </style>

</resources>