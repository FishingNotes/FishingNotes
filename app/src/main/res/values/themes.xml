    <!-- Base application theme. -->
    <style name="Theme.AnimatedSplashScreen" parent="Theme.Fishing">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        <item name="android:statusBarColor" >@color/white</item>-->
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon" >@drawable/icon_splashscreen</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ic_fish</item>
        <item name="postSplashScreenTheme">@style/Theme.AnimatedSplashScreen</item>
    </style>

    <style name="MainActionBar" parent="Theme.Fishing.Figma">
        <item name="colorOnPrimary">?colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>
    </style>

    <!-- Figma application theme. -->
    <style name="Theme.Fishing.Figma">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryFigmaColor</item>
        <item name="colorPrimaryVariant">@color/primaryFigmaDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryFigmaColor</item>
        <item name="colorSecondaryVariant">@color/secondaryFigmaDarkColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Text color. -->
        <item name="android:textColorPrimary">@color/primaryFigmaTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryFigmaTextColor</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
<!--        <item name="android:navigationBarColor">@color/primaryFigmaColor</item>-->
        <!-- Customize your theme here. -->
        <item name="colorOnBackgroundTint">@color/primaryFigmaBackgroundTint</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>
    </style>

